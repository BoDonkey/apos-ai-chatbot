{
  "compilerOptions": {
    "checkJs": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@apos-chatbot/shared/*": ["packages/shared/src/*"],
      "@apos-chatbot/ingestion/*": ["packages/ingestion/src/*"],
      "@apos-chatbot/server/*": ["packages/server/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "**/dist/*"
  ]
}
